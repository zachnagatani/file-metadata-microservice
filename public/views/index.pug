doctype html
html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
        link(rel="stylesheet" href="styles/dist/main.css")
    body
        div.container
            div.row
                div.col-md-6.col-md-offset-3
                    form(method="POST" action="/get-file-size" enctype="multipart/form-data").text-center#upload-form
                        div.form-group
                            label(for="file") Upload a file
                            input(type="file" name="file")#file
                        input(type="submit" value="Upload").btn.btn-default
        script(src="scripts/main.js")